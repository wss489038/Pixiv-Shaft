<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/head"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity=""
            android:background="?attr/colorPrimary"
            android:elevation="@dimen/four_dp">

        </ImageView>

        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/colorPrimary"
            android:elevation="@dimen/four_dp"
            app:navigationIcon="@drawable/ic_baseline_dns_24"
            app:titleTextColor="@color/white">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:id="@+id/toolbar_title"
                android:text="@string/string_75"
                android:textColor="@color/white"
                android:textSize="18sp" />

        </androidx.appcompat.widget.Toolbar>

            <com.scwang.smart.refresh.layout.SmartRefreshLayout
                android:id="@+id/refreshLayout"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <androidx.core.widget.NestedScrollView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="vertical"
                        android:layout_height="match_parent">

                        <FrameLayout
                            android:id="@+id/fragment_pivision"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                        </FrameLayout>

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/twelve_dp"
                            android:text="@string/string_76"
                            android:textColor="@color/rank_text_color"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <GridLayout
                            android:layout_width="match_parent"
                            android:layout_height="268dp"
                            android:columnCount="2"
                            android:orientation="horizontal"
                            android:rowCount="2">

                            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout
                                app:qmui_radius="10dp"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:id="@+id/manga"
                                android:stateListAnimator="@animator/button_press_scale"
                                android:layout_rowWeight="1"
                                android:layout_columnWeight="1"
                                android:layout_marginStart="@dimen/twelve_dp"
                                android:layout_marginTop="@dimen/twelve_dp"
                                android:layout_marginEnd="@dimen/six_dp"
                                android:layout_marginBottom="@dimen/six_dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/main_novel"
                                    android:background="@drawable/shape_round_outline"
                                    android:outlineProvider="background" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_margin="10dp"
                                    android:shadowColor="#FF000000"
                                    android:shadowDx="2"
                                    android:shadowDy="2"
                                    android:shadowRadius="2"
                                    android:text="@string/type_manga"
                                    android:textColor="@color/always_white"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout>

                            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout
                                app:qmui_radius="10dp"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_rowWeight="1"
                                android:id="@+id/novel"
                                android:stateListAnimator="@animator/button_press_scale"
                                android:layout_columnWeight="1"
                                android:layout_marginStart="@dimen/six_dp"
                                android:layout_marginTop="@dimen/twelve_dp"
                                android:layout_marginEnd="@dimen/twelve_dp"
                                android:layout_marginBottom="@dimen/six_dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@drawable/shape_round_outline"
                                    android:outlineProvider="background"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/main_manga" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_margin="10dp"
                                    android:shadowColor="#FF000000"
                                    android:shadowDx="2"
                                    android:shadowDy="2"
                                    android:shadowRadius="2"
                                    android:text="@string/type_novel"
                                    android:textColor="@color/always_white"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout>

                            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout
                                app:qmui_radius="10dp"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_rowWeight="1"
                                android:layout_columnWeight="1"
                                android:layout_marginStart="@dimen/twelve_dp"
                                android:id="@+id/walk_through"
                                android:stateListAnimator="@animator/button_press_scale"
                                android:layout_marginTop="@dimen/six_dp"
                                android:layout_marginEnd="@dimen/six_dp"
                                android:layout_marginBottom="@dimen/twelve_dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/center_1"
                                    android:background="@drawable/shape_round_outline"
                                    android:outlineProvider="background" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentBottom="true"
                                    android:layout_margin="10dp"
                                    android:shadowColor="#FF000000"
                                    android:shadowDx="2"
                                    android:shadowDy="2"
                                    android:shadowRadius="2"
                                    android:text="@string/type_walk_through"
                                    android:textColor="@color/always_white"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout>

                            <com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout
                                app:qmui_radius="10dp"
                                android:layout_width="0dp"
                                android:layout_height="0dp"
                                android:layout_rowWeight="1"
                                android:layout_columnWeight="1"
                                android:id="@+id/follow_novels"
                                android:stateListAnimator="@animator/button_press_scale"
                                android:layout_marginStart="@dimen/six_dp"
                                android:layout_marginTop="@dimen/six_dp"
                                android:layout_marginEnd="@dimen/twelve_dp"
                                android:layout_marginBottom="@dimen/twelve_dp">

                                <ImageView
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:scaleType="centerCrop"
                                    android:src="@drawable/center_2"
                                    android:background="@drawable/shape_round_outline"
                                    android:outlineProvider="background"/>

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_alignParentEnd="true"
                                    android:layout_alignParentBottom="true"
                                    android:layout_margin="10dp"
                                    android:shadowColor="#FF000000"
                                    android:shadowDx="2"
                                    android:shadowDy="2"
                                    android:shadowRadius="2"
                                    android:text="@string/string_196"
                                    android:textColor="@color/always_white"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                            </com.qmuiteam.qmui.widget.roundwidget.QMUIRoundRelativeLayout>

                        </GridLayout>

                    </LinearLayout>

                </androidx.core.widget.NestedScrollView>

            </com.scwang.smart.refresh.layout.SmartRefreshLayout>

    </LinearLayout>

</layout>

