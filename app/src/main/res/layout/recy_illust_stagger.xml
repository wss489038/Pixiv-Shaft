<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>

    </data>

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:foreground="?attr/selectableItemBackground"
        app:cardCornerRadius="@dimen/eight_dp"
        android:stateListAnimator="@animator/touch_raise"
        app:cardElevation="0dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white_and_black"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/illust_image"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="centerCrop" />


            <LinearLayout
                android:layout_width="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/six_dp"
                android:layout_height="wrap_content">

                <TextView
                    android:id="@+id/p_size"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tag_stroke"
                    android:paddingStart="@dimen/four_dp"
                    android:includeFontPadding="false"
                    style="@style/textBlack"
                    android:paddingTop="@dimen/two_dp"
                    android:paddingEnd="@dimen/four_dp"
                    android:layout_marginEnd="@dimen/six_dp"
                    android:paddingBottom="2dp"
                    android:textColor="@color/always_white"
                    android:textSize="11sp" />


                <TextView
                    android:id="@+id/p_gif"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tag_stroke"
                    android:paddingStart="@dimen/four_dp"
                    android:paddingTop="@dimen/two_dp"
                    android:text="GIF"
                    style="@style/textBlack"
                    android:includeFontPadding="false"
                    android:layout_marginEnd="@dimen/six_dp"
                    android:paddingEnd="@dimen/four_dp"
                    android:paddingBottom="2dp"
                    android:textColor="@color/always_white"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/created_by_ai"
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tag_stroke"
                    android:paddingStart="@dimen/four_dp"
                    android:paddingTop="@dimen/two_dp"
                    style="@style/textBlack"
                    android:text="AI"
                    android:includeFontPadding="false"
                    android:layout_marginEnd="@dimen/six_dp"
                    android:paddingEnd="@dimen/four_dp"
                    android:paddingBottom="2dp"
                    android:textColor="@color/always_white"
                    android:textSize="11sp" />

                <TextView
                    android:id="@+id/p_related"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/tag_stroke"
                    style="@style/textBlack"
                    android:paddingStart="@dimen/four_dp"
                    android:paddingTop="@dimen/two_dp"
                    android:includeFontPadding="false"
                    android:text="NEW"
                    android:paddingEnd="@dimen/four_dp"
                    android:paddingBottom="2dp"
                    android:textColor="@color/always_white"
                    android:textSize="11sp" />

            </LinearLayout>

            <ImageButton
                android:layout_width="36dp"
                android:padding="@dimen/four_dp"
                android:id="@+id/like_button"
                android:scaleType="fitCenter"
                android:layout_alignParentEnd="true"
                android:layout_alignParentBottom="true"
                android:src="@drawable/ic_like_illust_6"
                android:layout_height="36dp"
                app:tint="#a4afb3">

            </ImageButton>

<!--            <TextView-->
<!--                android:id="@+id/debug_message"-->
<!--                android:textColor="@color/black"-->
<!--                android:layout_width="wrap_content"-->
<!--                android:layout_height="wrap_content"/>-->

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</layout>