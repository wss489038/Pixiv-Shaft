<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="AppTheme" parent="QMUI.Compat.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#686bdd</item>
        <item name="colorPrimaryDark">#4749a0</item>
        <item name="colorControlActivated">?attr/colorPrimary</item>
        <item name="colorSwitchThumbNormal">#F1F1F1</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:windowAllowEnterTransitionOverlap">true</item>
        <item name="android:windowAllowReturnTransitionOverlap">true</item>
        <item name="android:statusBarColor" tools:targetApi="l">@android:color/transparent</item>
        <item name="qmui_skin_support_dialog_bg">@color/fragment_center</item>
        <item name="qmui_skin_support_dialog_title_text_color">@color/rank_text_color</item>
        <item name="qmui_skin_support_dialog_menu_item_text_color">@color/rank_text_color</item>
        <item name="qmui_skin_support_dialog_edit_text_color">@color/rank_text_color</item>
    </style>

    <style name="PixivBottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@drawable/bg_dialog_header</item>
    </style>

    <style name="ThemeOverlay.App.BottomSheetDialog" parent="ThemeOverlay.Material3.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/PixivBottomSheetStyle</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor" tools:ignore="NewApi">@android:color/transparent</item>
    </style>

    <style name="HomeAppTheme" parent="Theme.Material3.Dark.NoActionBar">
        <item name="bottomSheetDialogTheme">@style/ThemeOverlay.App.BottomSheetDialog</item>
        <!-- 自定义 motionDurationLong2 和 motionDurationMedium4 的值 -->
        <item name="motionDurationLong2" type="integer">800</item>
        <item name="motionDurationMedium4" type="integer">2000</item>
    </style>


    <style name="AppTheme.Default" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#686bdd</item>
        <item name="colorPrimaryDark">#4749a0</item>
    </style>

    <style name="AppTheme.Index0" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#686bdd</item>
        <item name="colorPrimaryDark">#4749a0</item>
    </style>

    <style name="AppTheme.Index1" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#56baec</item>
        <item name="colorPrimaryDark">#4ba2ce</item>
    </style>

    <style name="AppTheme.Index2" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#008BF3</item>
        <item name="colorPrimaryDark">#0277cf</item>
    </style>

    <style name="AppTheme.Index3" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#03d0bf</item>
        <item name="colorPrimaryDark">#04a598</item>
    </style>

    <style name="AppTheme.Index4" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#fee65e</item>
        <item name="colorPrimaryDark">#dbc650</item>
    </style>

    <style name="AppTheme.Index5" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#fe83a2</item>
        <item name="colorPrimaryDark">#d67089</item>
    </style>


    <style name="AppTheme.Index6" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#F44336</item>
        <item name="colorPrimaryDark">#D32F2F</item>
    </style>

    <style name="AppTheme.Index7" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#673AB7</item>
        <item name="colorPrimaryDark">#512DA8</item>
    </style>

    <style name="AppTheme.Index8" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#4CAF50</item>
        <item name="colorPrimaryDark">#689F38</item>
    </style>

    <style name="AppTheme.Index9" parent="AppTheme">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">#E91E63</item>
        <item name="colorPrimaryDark">#C2185B</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
        <item name="actionOverflowButtonStyle">@style/AppTheme.OverflowButtonStyle</item>
    </style>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight">
        <item name="android:background">@color/fragment_center</item>
    </style>

    <style name="AppTheme.OverflowButtonStyle" parent="Widget.AppCompat.ActionButton.Overflow">
        <item name="android:src">@drawable/ic_more</item>
    </style>

    <style name="shadowText">
        <item name="android:shadowColor">#FF666666</item>
        <item name="android:shadowDx">3.5</item>
        <item name="android:shadowDy">3.5</item>
        <item name="android:shadowRadius">3.5</item>
    </style>

    <style name="FullscreenTheme" parent="AppTheme">
        <item name="android:actionBarStyle">@style/FullscreenActionBarStyle</item>
        <item name="android:windowActionBarOverlay">true</item>
        <item name="android:windowBackground">@null</item>
        <item name="metaButtonBarStyle">?android:attr/buttonBarStyle</item>
        <item name="metaButtonBarButtonStyle">?android:attr/buttonBarButtonStyle</item>
    </style>

    <style name="FullscreenActionBarStyle" parent="Widget.AppCompat.ActionBar">
        <item name="android:background">@color/black_overlay</item>
    </style>


    <style name="My_CheckBox" parent="@android:style/Widget.Material.CompoundButton.CheckBox">
        <item name="android:colorControlActivated">?attr/colorPrimary</item>
        <item name="android:colorControlNormal">?attr/colorPrimaryDark</item>
    </style>

    <style name="dialog_animation_scale" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/zoom_enter</item>
        <item name="android:windowExitAnimation">@anim/zoom_exit</item>
    </style>



    <style name="dialog_animation" parent="@android:style/Animation.Dialog">
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>
    </style>


    <style name="setting_text_left_and_center" parent="setting_text_left">
        <item name="android:layout_centerVertical">true</item>
    </style>

    <style name="setting_text_left">
        <item name="android:textColor">@color/black_to_grey</item>
        <item name="android:layout_marginStart">@dimen/sixteen_dp</item>
        <item name="android:layout_marginTop">@dimen/twelve_dp</item>
        <item name="android:layout_marginBottom">@dimen/twelve_dp</item>
        <item name="android:layout_marginEnd">@dimen/eighty_dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="setting_text_head">
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:layout_marginStart">@dimen/sixteen_dp</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:layout_marginBottom">@dimen/eight_dp</item>
        <item name="android:textSize">13sp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="setting_right_arrow">
        <item name="android:layout_marginEnd">@dimen/sixteen_dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:drawableEnd">@drawable/ic_arrow_right</item>
    </style>

    <style name="setting_right_switch">
        <item name="android:layout_marginEnd">@dimen/sixteen_dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_centerVertical">true</item>
        <item name="android:layout_alignParentEnd">true</item>
        <item name="android:checked">true</item>
        <item name="android:colorForeground">#434343</item>
    </style>

    <style name="full_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/settings_divider</item>
    </style>

    <style name="half_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">@dimen/sixteen_dp</item>
        <item name="android:layout_height">0.5dp</item>
        <item name="android:background">@color/settings_divider</item>
    </style>

    <style name="ripple_rela">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">70dp</item>
        <item name="android:clickable">true</item>
        <item name="android:background">?android:attr/selectableItemBackground</item>
    </style>

    <style name="BarTheme">
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/white</item>
    </style>


    <style name="AboutUserLeft">
        <item name="android:layout_width">80dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/sixteen_dp</item>
        <item name="android:textColor">@color/about_user_left</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AboutUserRight">
        <item name="android:layout_width">match_parent</item>
        <item name="android:background">@color/trans</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/sixteen_dp</item>
        <item name="android:layout_marginEnd">@dimen/sixteen_dp</item>
        <item name="android:layout_marginBottom">@dimen/sixteen_dp</item>
        <item name="android:textColor">@color/about_user_right</item>
        <item name="android:textColorHint">@color/about_user_right</item>
        <item name="android:autoLink">all</item>
        <item name="android:textColorLink">?attr/colorPrimary</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="AboutUserRightDarkText" parent="AboutUserRight">
        <item name="android:textColor">@color/about_user_left</item>
    </style>

    <style name="LinearVertical">
        <item name="android:orientation">vertical</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="LinearHorizon">
        <item name="android:orientation">horizontal</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <declare-styleable name="ProgressTextButton">
        <attr name="ptb_progress_width" format="dimension" />
        <attr name="ptb_progress_stroke_width" format="dimension" />
    </declare-styleable>

    <declare-styleable name="ProgressImageButton">
        <attr name="pib_progress_width" format="dimension" />
        <attr name="pib_progress_stroke_width" format="dimension" />
    </declare-styleable>

    <style name="GreenShiningButton">
        <item name="android:textColor">@color/buttonTextGreen</item>
        <item name="android:shadowColor">@color/green_shadow_color</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/round_corner_shining_btn_green</item>
        <item name="android:stateListAnimator">@animator/button_press_alpha</item>
    </style>

    <style name="BlueShiningButton">
        <item name="android:textColor">@color/buttonTextBlue</item>
        <item name="android:shadowColor">@color/blue_shadow_color</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/round_corner_shining_btn_blue</item>
        <item name="android:stateListAnimator">@animator/button_press_alpha</item>
    </style>

    <style name="RedShiningButton">
        <item name="android:textColor">@color/buttonTextRed</item>
        <item name="android:shadowColor">@color/red_shadow_color</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">10</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:gravity">center</item>
        <item name="android:maxLines">1</item>
        <item name="android:singleLine">true</item>
        <item name="android:textStyle">bold</item>
        <item name="android:background">@drawable/round_corner_shining_btn_red</item>
        <item name="android:stateListAnimator">@animator/button_press_alpha</item>
    </style>

    <style name="textMontserratRegular">
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="textMontserratBold">
        <item name="fontFamily">@font/montserrat_bold</item>
    </style>

    <style name="textBlack">
        <item name="fontFamily">@font/montserrat_extra_bold</item>
    </style>

    <style name="textMontserratMedium">
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>

    <style name="textMontserratSemiBold">
        <item name="fontFamily">@font/montserrat_semi_bold</item>
    </style>

    <style name="textMontserratExtraBold">
        <item name="fontFamily">@font/montserrat_extra_bold</item>
    </style>

    <style name="SplashTheme" parent="Theme.SplashScreen">
        <item name="windowSplashScreenBackground">@color/splash_background</item>
        <!--        <item name="android:windowSplashScreenBrandingImage" tools:targetApi="s">-->
        <!--            @drawable/splash_text-->
        <!--        </item>-->
        <item name="windowSplashScreenAnimatedIcon">@mipmap/snail_foreground</item>
        <item name="windowSplashScreenAnimationDuration">200</item>
        <item name="postSplashScreenTheme">@style/AppTheme</item>
    </style>


    <declare-styleable name="InsetLayout_Layout">
        <attr name="layout_inset_margin_adjust_target" format="reference"/>
        <attr name="layout_inset_padding_adjust_target" format="reference"/>
        <attr name="layout_inset_padding_top_adjust_target" format="reference"/>
        <attr name="layout_inset_padding_bottom_adjust_target" format="reference"/>
        <attr name="layout_inset_ignores_keyboard" format="boolean"/>
        <attr name="layout_inset_bar_type" format="enum">
            <enum name="none" value="0"/>
            <enum name="top" value="1"/>
            <enum name="bottom" value="2"/>
        </attr>
        <attr name="layout_inset_adjust_margin">
            <flag name="top" value="0x01" />
            <flag name="bottom" value="0x02" />
            <flag name="left" value="0x04" />
            <flag name="right" value="0x08" />
        </attr>
        <attr name="layout_inset_adjust_padding">
            <flag name="top" value="0x01" />
            <flag name="bottom" value="0x02" />
            <flag name="left" value="0x04" />
            <flag name="right" value="0x08" />
        </attr>
    </declare-styleable>

    <declare-styleable name="SlidingCursorView">
        <attr name="scv_cursor_height" format="dimension" />
        <attr name="scv_cursor_width" format="dimension" />
        <attr name="scv_cursor_color" format="color" />
    </declare-styleable>

    <style name="TransparentDialogTheme" parent="Theme.AppCompat.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

    <style
        name="dialog_animation_fade" >
        <item name="android:windowEnterAnimation">@anim/dialog_enter_anim</item>
        <item name="android:windowExitAnimation">@anim/dialog_exit_anim</item>
    </style>
</resources>


